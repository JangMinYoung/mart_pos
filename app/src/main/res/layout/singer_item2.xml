<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="일자 : "
                android:textSize="20dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017-11-09 17:39:30"
                android:textSize="20dp"
                android:layout_toEndOf="@+id/date_text" />

            <TextView
                android:layout_below="@+id/date_text"
                android:id="@+id/method_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="결제 수단 : "
                android:textSize="20dp"
                android:textStyle="bold"/>

            <TextView
                android:layout_below="@+id/date"
                android:id="@+id/method"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="카드"
                android:textSize="20dp"
                android:layout_toEndOf="@+id/method_text" />
            <TextView
                android:layout_below="@+id/method_text"
                android:id="@+id/price_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="금액 : "
                android:textSize="20dp"
                android:textStyle="bold"/>
            <TextView
                android:layout_below="@+id/method"
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10000"
                android:textSize="20dp"
                android:layout_toEndOf="@+id/price_text" />
        </RelativeLayout>




</LinearLayout>