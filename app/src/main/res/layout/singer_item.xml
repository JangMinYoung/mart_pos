<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


        <TextView
            android:id="@+id/number_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bacode : "
            android:textSize="20dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/number"
            android:layout_toEndOf="@+id/number_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="001"
            android:textSize="20dp"
            />
        <TextView
            android:layout_toLeftOf="@+id/product_name"
            android:id="@+id/product_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="상품 명 : "
            android:textSize="20dp"
            android:textStyle="bold"
            />

        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/product_name"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="초코 칩"
            android:textSize="20dp"
            />

        <TextView
            android:layout_below="@+id/product_name_text"
            android:id="@+id/unit_price_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="단가 : "
            android:textSize="20dp"
            android:textStyle="bold"
            />

        <TextView
            android:layout_below="@+id/product_name"
            android:id="@+id/unit_price"
            android:layout_toEndOf="@+id/unit_price_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1000 원"
            android:textSize="20dp"
            />
        <TextView
            android:layout_below="@+id/product_name_text"
            android:layout_toLeftOf="@+id/quantity"
            android:id="@+id/quantity_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="수량 : "
            android:textSize="20dp"
            android:textStyle="bold"
            />

        <TextView
            android:layout_below="@+id/product_name"
            android:layout_alignParentRight="true"
            android:id="@+id/quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textSize="20dp"
            />
    <RelativeLayout
        android:layout_below="@+id/quantity"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView

            android:id="@+id/price_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="금액 : "
            android:textSize="20dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/price"
            android:layout_toEndOf="@+id/price_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3000 원"
            android:textSize="20dp"
            />
    </RelativeLayout>
</RelativeLayout>